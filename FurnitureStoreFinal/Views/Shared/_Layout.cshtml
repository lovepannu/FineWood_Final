<!DOCTYPE html>
<html>
<head>

    <title>CoastWood Furniture</title>
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">




    @Scripts.Render("~/bundles/modernizr")
</head>
<body>


    <div class="container p-0">
        <header>
            <section id="logo-mainmenu">
                <div class="container">
                    <div class="row m-0">
                        <div class="col-sm-12">
                            <div class="lmm">
                                <nav class="navbar navbar-expand-md p-0">
                                    <div class="navbar-brand">
                                        <a href="index.html">FineWood <span>Furniture</span></a>
                                    </div>
                                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                        <span class="navbar-toggler-icon"></span>
                                    </button>

                                    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                                        <ul class="navbar-nav">
                                            <li class="nav-item active">
                                                <a class="nav-link" href="@Url.Action("Index","Home")">Home</a>
                                            </li>&nbsp;&nbsp;&nbsp;
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("About","Home")">About</a>
                                            </li>&nbsp;&nbsp;&nbsp;
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("AdminIndex","Manage")">Admin Login</a>
                                            </li>&nbsp;&nbsp;&nbsp;
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Contact","Home")">Contact-Us</a>
                                            </li>
                                        </ul>
                                    </div>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </header>

        <main>
            <section id="slider">
                <div class="container p-0">
                    <div class="row m-0">
                        <div class="col-sm-12 p-0">
                            <div id="demo" class="carousel slide" data-ride="carousel">

                                <!-- Indicators -->
                                <ul class="carousel-indicators">
                                    <li data-target="#demo" data-slide-to="0" class="active"></li>
                                    <li data-target="#demo" data-slide-to="1"></li>
                                    <li data-target="#demo" data-slide-to="2"></li>
                                    <li data-target="#demo" data-slide-to="3"></li>
                                </ul>

                                <!-- The slideshow -->
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="~/images/slider-1.jpg" class="img-responsive">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/images/slider-2.jpg" class="img-responsive">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/images/slider-3.jpg" class="img-responsive">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/images/slider-4.jpg" class="img-responsive">
                                    </div>
                                </div>

                                <!-- Left and right controls -->
                                <a class="carousel-control-prev" href="#demo" data-slide="prev">
                                    <span class="carousel-control-prev-icon"></span>
                                </a>
                                <a class="carousel-control-next" href="#demo" data-slide="next">
                                    <span class="carousel-control-next-icon"></span>
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <div class="container body-content">
                @RenderBody()
                <hr />
            </div>

            <section id="customer-services">
                <div class="container">
                    <div class="row m-0">
                        <div class="col-sm-12 col-md-6 col-lg-3">
                            <div class="box">
                                <div class="image">
                                    <img src="~/images/service-1.png" class="img-responsive" />
                                </div>
                                <div class="content">
                                    <h4>NEW ZEALAND Made</h4>
                                    <ul>
                                        <li>Designed and made in NZ – Keeping NZ working</li>
                                        <li>NZ Owned and operated.</li>
                                        <li>Established in 1997</li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6 col-lg-3">
                            <div class="box">
                                <div class="image">
                                    <img src="~/images/service-2.png" class="img-responsive" />
                                </div>
                                <div class="content">
                                    <h4>Style & Options</h4>
                                    <ul>
                                        <li>Our aim is to make what you want</li>
                                        <li>Your choice of style</li>
                                        <li>Your choice of colour</li>
                                        <li>Your choice of handles</li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6 col-lg-3">
                            <div class="box">
                                <div class="image">
                                    <img src="~/images/service-3.png" class="img-responsive" />
                                </div>
                                <div class="content">
                                    <h4>Quality Guarant-ee</h4>
                                    <ul>
                                        <li>25 Year Quality Guarantee</li>
                                        <li>Buy with confidence – we stand behind our products</li>
                                        <li>Built to last</li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6 col-lg-3">
                            <div class="box">
                                <div class="image">
                                    <img src="~/images/service-4.jpg" class="img-responsive" />
                                </div>
                                <div class="content">
                                    <h4>Customer Care</h4>
                                    <ul>
                                        <li>Making it EASY through superior Customer Service.</li>
                                        <li>We are committed to your 100% satisfaction!</li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>

        <footer>
            <div class="container-fluid p-0">
                <div class="row m-0">
                    <div class="col-sm-12">
                        <p>This Website is Created For COASTWOOD FURNITURE.</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script type="text/javascript" src="~/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.js"></script>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

